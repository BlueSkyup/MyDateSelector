<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/lin_top"
        android:background="#fff"
        >
        <TextView
            android:clickable="true"
            android:id="@+id/txt_cancle"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="取消"
            android:textSize="15sp"
            android:textColor="#2D87E2"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/sel_bt_white2gray"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="选择时间"
            android:textColor="#757575"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_centerInParent="true"
            />
        <TextView
            android:clickable="true"
            android:id="@+id/txt_enter"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="确定"
            android:textSize="15sp"
            android:textColor="#2D87E2"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:layout_alignParentRight="true"
            android:paddingRight="10dp"
            android:background="@drawable/sel_bt_white2gray"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/lin_top"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:id="@+id/lin_time"
        android:background="#78909c"
        >
        <ListView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:id="@+id/lv_hour"
            android:scrollbars="none"
            ></ListView>
        <ListView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:id="@+id/lv_time"
            android:scrollbars="none"
            ></ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/lin_top"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        android:id="@+id/lin_date"
        android:visibility="gone"
        >
        <ListView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:id="@+id/lv_year"
            android:scrollbars="none"
            ></ListView>
        <ListView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:id="@+id/lv_month"
            android:scrollbars="none"
            ></ListView>
        <ListView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp"
            android:id="@+id/lv_day"
            android:scrollbars="none"
            ></ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        >
        <TextView
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="时间"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="#2D87E2"
            android:id="@+id/txt_choose_time"
            />
        <View
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="#757575"
            />
        <TextView
            android:id="@+id/txt_choose_date"
            android:clickable="true"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="日期"
            android:textSize="18sp"
            android:textColor="#757575"
            android:gravity="center"

            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#77616161"
        android:layout_centerInParent="true"
        android:focusable="false"
        />
</RelativeLayout>